// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Hotel {
  h_id        String  @id @default(auto()) @map("_id") @db.ObjectId
  password    String
  h_name      String
  tel         String
  email       String  @unique
  address     String
  alley       String?
  street      String
  district    String
  subdistrict String
  province    String
  postcode    String
  hash        String
}

model Employee {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  f_name      String
  l_name      String
  tel         String
  email       String  @unique
  birth       String
  address     String
  alley       String?
  street      String
  district    String
  subdistrict String
  province    String
  postcode    String
}
